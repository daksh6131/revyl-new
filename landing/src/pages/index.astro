  <script>
  (function () {
    const canvas = document.getElementById('hud-grid');
    if (!canvas) return;
    const ctx = canvas.getContext('2d');

    const CELL  = 8;
    const MAX_R = 1.2;
    const MIN_R = 0.13;

    let mx = -9999, my = -9999;
    let tmx = -9999, tmy = -9999;
    let hasMoused = false;

    const section = canvas.closest('section');

    section.addEventListener('mousemove', (e) => {
      const r = section.getBoundingClientRect();
      tmx = e.clientX - r.left;
      tmy = e.clientY - r.top;
      hasMoused = true;
    }, { passive: true });

    section.addEventListener('mouseleave', () => {
      hasMoused = false;
      tmx = -9999; tmy = -9999;
    });

    function resize() {
      canvas.width  = section.offsetWidth;
      canvas.height = section.offsetHeight;
    }
    resize();
    window.addEventListener('resize', resize, { passive: true });

    function draw() {
      if (hasMoused) {
        mx += (tmx - mx) * 0.08;
        my += (tmy - my) * 0.08;
      } else {
        mx = -9999; my = -9999;
      }

      const W = canvas.width;
      const H = canvas.height;
      ctx.clearRect(0, 0, W, H);

      const cols = Math.ceil(W / CELL) + 1;
      const rows = Math.ceil(H / CELL) + 1;
      const diagMax = Math.hypot(W, H);

      for (let r = 0; r < rows; r++) {
        for (let c = 0; c < cols; c++) {
          const x = c * CELL;
          const y = r * CELL;

          // Base size: large top-left, fades diagonally toward bottom-right
          const diagDist = Math.hypot(x, y);
          const baseT = Math.max(0, 1 - (diagDist / diagMax) * 1.35);
          const baseR = MIN_R + (MAX_R - MIN_R) * Math.pow(baseT, 1.4);

          // Mouse proximity boost
          let boost = 0;
          if (hasMoused) {
            const d = Math.hypot(x - mx, y - my);
            const prox = Math.max(0, 1 - d / 80);
            boost = MAX_R * 2.5 * prox * prox;
          }

          const radius = Math.min(MAX_R * 2, baseR + boost);
          if (radius < 0.08) continue;

          const alpha = 0.06 + 0.28 * ((radius - MIN_R) / (MAX_R - MIN_R));

          ctx.beginPath();
          ctx.arc(x, y, radius, 0, Math.PI * 2);
          ctx.fillStyle = 'rgba(196,161,255,' + alpha + ')';
          ctx.fill();
        }
      }

      requestAnimationFrame(draw);
    }

    requestAnimationFrame(draw);
  })();
