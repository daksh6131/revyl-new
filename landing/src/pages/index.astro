      { t: 'ok',  m: '[  3.200] ok: runtimes mounted' },
      { t: '',    m: '[  3.400] CI/CD bridge loaded' },
      { t: '',    m: '[  3.550] Verifying system entropy...' },
      { t: 'ok',  m: '[  3.700] ok: entropy verified' },
      { t: 'ok',  m: '[  3.850] REVYL ENGINE ONLINE — ready.' },
    ];

    const container = document.getElementById('rl-log-container');
    const bar       = document.getElementById('rl-bar');
    const pct       = document.getElementById('rl-pct');
    const status    = document.getElementById('rl-status');
    const loader    = document.getElementById('revyl-loader');
    if (!container || !bar || !pct || !loader) return;

    // keep a blinking cursor element at the bottom
    const cursor = document.createElement('span');
    cursor.className = 'rl-cursor';

    const DURATION = 2600;
    const interval = DURATION / logs.length;
    let i = 0;

    function tick() {
      if (i >= logs.length) {
        if (status) status.textContent = 'ONLINE';
        return;
      }
      // remove cursor from wherever it was
      cursor.remove();

      const entry = logs[i];
      const el = document.createElement('div');
      el.className = 'rl-entry' + (entry.t ? ' ' + entry.t : '');
      el.textContent = entry.m;
      el.appendChild(cursor);
      container.appendChild(el);
      container.scrollTop = container.scrollHeight;

      const p = Math.min(100, Math.floor((i / (logs.length - 1)) * 100));
      bar.style.width = p + '%';
      pct.textContent = p + '%';

      i++;
      if (i < logs.length) {
        const jitter = (Math.random() - 0.5) * interval * 0.4;
        setTimeout(tick, interval + jitter);
      } else {
        if (status) status.textContent = 'ONLINE';
      }
    }

    setTimeout(tick, 150);

    setTimeout(function() {
      loader.classList.add('fade-out');
      loader.addEventListener('transitionend', function() {
        loader.remove();
        sessionStorage.setItem(window.__LOADER_KEY || 'revyl_loader_v2', '1');
      }, { once: true });
    }, 3500);
  })();
