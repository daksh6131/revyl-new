<script is:inline>
  /* ── Scout-style shuffle/scramble reveal ── */
  (function() {
    var CHARS = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%&?';
    var CHAR_DURATION = 40;   // ms per shuffle frame
    var SHUFFLES = 6;         // random frames before lock
    var STAGGER = 28;         // ms between each character starting

    function rand(str) {
      return str[Math.floor(Math.random() * str.length)];
    }

    function splitHeading(el) {
      // Collect child nodes, preserving <br> and inline elements
      var nodes = Array.from(el.childNodes);
      el.innerHTML = '';

      nodes.forEach(function(node) {
        if (node.nodeName === 'BR') {
          el.appendChild(document.createElement('br'));
        } else if (node.nodeType === Node.TEXT_NODE) {
          var text = node.textContent;
          for (var i = 0; i < text.length; i++) {
            var ch = text[i];
            var span = document.createElement('span');
            if (ch === ' ') {
              span.className = 'rv-char rv-space';
              span.textContent = ' ';
            } else {
              span.className = 'rv-char';
              span.dataset.final = ch;
              span.textContent = ch;
            }
            el.appendChild(span);
          }
        } else {
          // Inline element (e.g. <em>) — wrap its text chars too
          var clone = node.cloneNode(true);
          var inner = clone.textContent;
          clone.textContent = '';
          for (var j = 0; j < inner.length; j++) {
            var ch2 = inner[j];
            var s = document.createElement('span');
            if (ch2 === ' ') {
              s.className = 'rv-char rv-space';
              s.textContent = ' ';
            } else {
              s.className = 'rv-char';
              s.dataset.final = ch2;
              s.textContent = ch2;
            }
            clone.appendChild(s);
          }
          el.appendChild(clone);
        }
      });
    }

    function scrambleChar(span, finalCh, shuffles, charDuration) {
      var count = 0;
      var pool = finalCh === finalCh.toLowerCase() ? CHARS.toLowerCase() : CHARS;
      span.style.opacity = '1';

      function tick() {
        if (count < shuffles) {
          span.textContent = rand(pool);
          count++;
          setTimeout(tick, charDuration);
        } else {
          span.textContent = finalCh;
        }
      }
      tick();
    }

    function animateHeading(el, globalDelay) {
      var chars = el.querySelectorAll('.rv-char:not(.rv-space)');
      chars.forEach(function(span, i) {
        var finalCh = span.dataset.final || span.textContent;
        setTimeout(function() {
          scrambleChar(span, finalCh, SHUFFLES, CHAR_DURATION);
        }, globalDelay + i * STAGGER);
      });
      // Show spaces immediately
      el.querySelectorAll('.rv-char.rv-space').forEach(function(s) {
        s.style.opacity = '1';
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      var headings = document.querySelectorAll('h1, h2, h3, h4, h5, h6');
      headings.forEach(function(h) {
        if (h.closest('#hud-nav') || h.closest('#revyl-loader')) return;
        splitHeading(h);
      });

      // Hero headings fire immediately
      var heroHeadings = document.querySelectorAll('.hero-grid h1, .hero-grid h2');
      heroHeadings.forEach(function(h) { animateHeading(h, 0); });

      // All others fire on scroll
      var obs = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            animateHeading(entry.target, 0);
            obs.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15 });

      headings.forEach(function(h) {
        if (h.closest('#hud-nav') || h.closest('#revyl-loader')) return;
        if (!h.closest('.hero-grid')) obs.observe(h);
      });
    });
  })();
</script>

<script is:inline>
  /* ── HUD vertex corner brackets ── */
  (function() {
    function addCorners(el, opts) {
      if (el.querySelector('.hud-corner')) return;
      var pos = getComputedStyle(el).position;
      if (pos === 'static') el.style.position = 'relative';
      var corners = [];
      if (!opts || !opts.skipTop) corners.push('tl','tr');
      if (!opts || !opts.skipBottom) corners.push('bl','br');
      corners.forEach(function(c) {
        var s = document.createElement('span');
        s.className = 'hud-corner';
        s.setAttribute('data-c', c);
        s.setAttribute('aria-hidden', 'true');
        el.appendChild(s);
      });
    }

    document.addEventListener('DOMContentLoaded', function() {
      var targets = Array.prototype.slice.call(document.querySelectorAll(
        '.hud-header, .hero-grid, .features-split, section, footer'
      ));
      targets = targets.filter(function(el) {
        if (el.closest('#hud-nav') || el.closest('#revyl-loader')) return;
        return true;
      });
      targets.sort(function(a, b) {
        return a.getBoundingClientRect().top - b.getBoundingClientRect().top;
      });
      targets.forEach(function(el, i) {
        var isHero = el.classList.contains('hero-grid');
        var isNav = el.classList.contains('hud-header');
        var skipTop = false;
        if (isHero) {
          skipTop = true; // hero only shows bottom corners
        } else if (!isNav && i > 0) {
          var prev = targets[i - 1];
          var r1 = prev.getBoundingClientRect();
          var r2 = el.getBoundingClientRect();
          if (Math.abs(r2.top - r1.bottom) < 2) skipTop = true;
        }
        addCorners(el, { skipTop: skipTop, skipBottom: false });
      });
    });
  })();
</script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var hudMenuBtn = document.getElementById('hud-menu-btn');
    var hudNavClose = document.getElementById('hud-nav-close');
    var hudNav = document.getElementById('hud-nav');
    function openNav() {
      if (!hudNav) return;
      hudNav.style.visibility = 'visible';
      requestAnimationFrame(function() { hudNav.style.opacity = '1'; });
    }
    function closeNav() {
      if (!hudNav) return;
      hudNav.style.opacity = '0';
      hudNav.style.visibility = 'hidden';
    }
    if (hudMenuBtn) hudMenuBtn.addEventListener('click', openNav);
    if (hudNavClose) hudNavClose.addEventListener('click', closeNav);
    document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeNav(); });
  });
</script>

<script is:inline>
  /* Fit footer wordmark SVG viewBox tightly to the text bbox so it fills edge-to-edge */
  (function() {
    function fitWordmark() {
      var svg  = document.getElementById('footer-wordmark-svg');
      var text = document.getElementById('footer-wordmark-text');
      if (!svg || !text) return;
      try {
        var bb = text.getBBox();
        /* Add a tiny vertical pad (4px each side) so ascenders/descenders aren't clipped */
        var pad = 4;
        svg.setAttribute('viewBox', (bb.x - pad) + ' ' + (bb.y - pad) + ' ' + (bb.width + pad * 2) + ' ' + (bb.height + pad * 2));
      } catch(e) {}
    }
    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(fitWordmark);
    } else {
      window.addEventListener('load', fitWordmark);
    }
  })();
</script>
